{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "pretty": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "esModuleInterop": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist"]
}
